                                <x:String>FranÃ§ais ðŸ‡«ðŸ‡·</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>
                </VerticalStackLayout>
            </Frame>

            <!-- Theme -->
            <Frame BackgroundColor="#2A2A2A" 
                   BorderColor="#3A3A3A"
                   CornerRadius="15"
                   Padding="20">
                <HorizontalStackLayout Spacing="15">
                    <Label Text="Dark Mode (recommended)"
                           FontSize="18"
                           TextColor="#E0E0E0"
                           VerticalOptions="Center"
                           HorizontalOptions="StartAndExpand" />

                    <Switch x:Name="DarkModeSwitch"
                            IsToggled="True"
                            OnColor="#4CAF50"
                            ThumbColor="White"
                            Toggled="DarkModeSwitch_Toggled" />
                </HorizontalStackLayout>
            </Frame>

            <!-- Clear Data -->
