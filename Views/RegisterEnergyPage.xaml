<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SpoonTrack.Views.RegisterEnergyPage"
             Title="Log Energy"
             BackgroundColor="#1E1E1E">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            
            <Label Text="How many spoons today?"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="#E0E0E0"
                   HorizontalOptions="Center" />

            <!-- Visual Spoons Display -->
            <Frame BackgroundColor="#2A2A2A" 
                   BorderColor="#3A3A3A"
                   CornerRadius="15"
                   Padding="20">
                <VerticalStackLayout Spacing="15">
                    <Label x:Name="SpoonsLabel"
                           Text="ðŸ¥„ 5/10 spoons"
                           FontSize="32"
                           FontAttributes="Bold"
                           TextColor="#4CAF50"
                           HorizontalOptions="Center" />
                    
                    <Slider x:Name="EnergySlider"
                            Minimum="1" 
                            Maximum="10"
                            Value="5"
                            MinimumTrackColor="#4CAF50"
                            MaximumTrackColor="#555555"
                            ThumbColor="#4CAF50"
                            ValueChanged="EnergySlider_ValueChanged" />
                    
                    <!-- DescriÃ§Ã£o nÃ­vel -->
                    <Label x:Name="EnergyDescription"
                           Text="Moderate energy"
                           FontSize="16"
                           TextColor="#CCCCCC"
                           HorizontalOptions="Center"
                           Margin="0,10,0,0" />
                </VerticalStackLayout>
            </Frame>

            <!-- Sleep Quality -->
            <Label Text="Sleep Quality Last Night"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="#E0E0E0" />
            
            <Frame BackgroundColor="#2A2A2A" 
                   BorderColor="#3A3A3A"
                   CornerRadius="15"
                   Padding="20">
                <VerticalStackLayout Spacing="15">
                    <Label x:Name="SleepLabel"
                           Text="ðŸ˜´ 5/10"
                           FontSize="24"
                           TextColor="#2196F3"
                           HorizontalOptions="Center" />
                    
                    <Slider x:Name="SleepSlider"
                            Minimum="1" 
                            Maximum="10"
                            Value="5"
                            MinimumTrackColor="#2196F3"
                            MaximumTrackColor="#555555"
                            ThumbColor="#2196F3"
                            ValueChanged="SleepSlider_ValueChanged" />
                </VerticalStackLayout>
            </Frame>

            <!-- Symptom Severity -->
            <Label Text="Main Symptoms Today"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="#E0E0E0" />

            <Frame BackgroundColor="#2A2A2A" 
                   BorderColor="#3A3A3A"
                   CornerRadius="15"
                   Padding="15">
                <VerticalStackLayout Spacing="10">
                    
                    <!-- Fatigue -->
                    <HorizontalStackLayout Spacing="10">
                        <CheckBox x:Name="FatigueCheck" Color="#FF5722" />
                        <Label Text="Fatigue" 
                               FontSize="18"
                               TextColor="#E0E0E0"
                               VerticalOptions="Center" />
                    </HorizontalStackLayout>
                    <Slider x:Name="FatigueSeverity"
                            Minimum="1" Maximum="10" Value="5"
                            MinimumTrackColor="#FF5722"
                            IsVisible="{Binding Source={x:Reference FatigueCheck}, Path=IsChecked}" />
                    
                    <!-- Pain -->
                    <HorizontalStackLayout Spacing="10">
                        <CheckBox x:Name="PainCheck" Color="#FF5722" />
                        <Label Text="Pain" 
                               FontSize="18"
                               TextColor="#E0E0E0"
                               VerticalOptions="Center" />
                    </HorizontalStackLayout>
                    <Slider x:Name="PainSeverity"
                            Minimum="1" Maximum="10" Value="5"
                            MinimumTrackColor="#FF5722"
                            IsVisible="{Binding Source={x:Reference PainCheck}, Path=IsChecked}" />
                    
                    <!-- Brain Fog -->
                    <HorizontalStackLayout Spacing="10">
                        <CheckBox x:Name="BrainFogCheck" Color="#FF5722" />
                        <Label Text="Brain Fog" 
                               FontSize="18"
                               TextColor="#E0E0E0"
                               VerticalOptions="Center" />
                    </HorizontalStackLayout>
                    <Slider x:Name="BrainFogSeverity"
                            Minimum="1" Maximum="10" Value="5"
                            MinimumTrackColor="#FF5722"
                            IsVisible="{Binding Source={x:Reference BrainFogCheck}, Path=IsChecked}" />
                    
                </VerticalStackLayout>
            </Frame>

            <!-- Notes -->
            <Label Text="Notes (optional)"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="#E0E0E0" />
            
            <Editor x:Name="NotesEditor"
                    Placeholder="Anything specific today? Triggers, activities, how you feel..."
                    PlaceholderColor="#888888"
                    TextColor="#E0E0E0"
                    BackgroundColor="#2A2A2A"
                    HeightRequest="120"
                    FontSize="16" />

            <!-- Save Button -->
            <Button Text="ðŸ’¾ Save Entry"
                    Clicked="SaveButton_Clicked"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    FontSize="20"
                    FontAttributes="Bold"
                    CornerRadius="10"
                    Padding="20"
                    Margin="0,20,0,0" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
